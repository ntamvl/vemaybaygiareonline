icheck()
	.i-check,
	.i-radio
		display inline-block
		*display inlne
		vertical-align middle
		margin 0
		padding 0
		width 22px
		height 22px
		border 1px solid darken(white, 20%)
		// box-shadow inset 0 0 0 1px darken(white, 20%)
		cursor pointer
		top 1px
		left -7px
		margin-left -13px
		float left
		text-align center
		line-height 20px
		transition 0.3s
		position relative
		overflow hidden
		&:before
			content '\f00c'
			font-family $icon_font
			transition 0.3s
			transform translate3d(0, -25px, 0)
			display block
			opacity 0
			color white
			font-size 14px
		&.hover
			border 1px solid _base
			// box-shadow inset 0 0 0 1px _base
		&.checked
			border 1px solid _base
			// box-shadow inset 0 0 0 1px _base
			background _base
			&:before
				transform translate3d(0, 0, 0)
				opacity 1
		&.disabled
			border-color darken(white, 15%) !important
			&.checked
				background darken(white, 20%) !important

	.i-check
		&.i-check-stroke.checked
			background white
			&:before
				color _base

	.i-radio
		border-radius 50%
		&:before
			content '\f111'
			font-size 12px

	.checkbox-switch,
	.radio-switch
		.i-check,
		.i-radio
			border-radius 0
			width 44px
			// border-radius 20%
			broder-color darken(white, 40%)
			border-width 2px
			&:before
				opacity 1
				transform translate3d(0, 0, 0)
				// color darken(white, 40%)
				background darken(white, 30%)
				content ''
				width 16px
				height 14px
				top 2px
				left 2px
				position absolute
			&.checked
				background white
				// background _base
				&:before
					background _base
					// background white
					transform translate3d(20px, 0, 0)
			&.disabled
				// border-color darken(white, 30%)
				&:before
					background darken(white, 20%) !important

	.checkbox-small,
	.radio-small
		// margin 10px 0
		margin-bottom 10px
		&.checkbox-inline,
		&.radio-inline
			margin 0
		label
			font-size $font_size - 2
			.i-check,
			.i-radio
				width 18px
				height 18px
				line-height 16px
				top 3px
				&:before
					font-size 12px
			.i-radio:before
					font-size 9px

	.checkbox-lg,
	.radio-lg
		// margin 20px 0
		margin-bottom 20px
		&.checkbox-inline,
		&.radio-inline
			margin 0
		label
			font-size _fs + 2
			.i-check,
			.i-radio
				width 26px
				height 26px
				line-height 24px
				top -1px
				&:before
					font-size 16px
			.i-radio:before
				font-size 14px

	.checkbox-stroke,
	.radio-stroke
		.i-check,
		.i-radio
			&.checked
				background white
				&:before
					color _base
				&.disabled
					background white
					&:before
						color darken(white, 20%)

	.checkbox-small.checkbox-inline + .checkbox-small.checkbox-inline,
	.radio-small.radio-inline + .radio-small.radio-inline
		margin-left 10px

	.checkbox-lg.checkbox-inline + .checkbox-lg.checkbox-inline,
	.radio-lg.radio-inline + .radio-lg.radio-inline
		margin-left 20px	
