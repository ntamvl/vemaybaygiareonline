testimonial()
	
	prefix = 'testimonial'	

	sel($var, $pfx = true, $class = true)
		return set_sel($var, $pfx, $class, prefix)
		
	item = sel(prefix, false)
	item_color = sel('color')	
	inner = sel('inner')
	author = sel('author')
	name = sel('author-name')
	subtitle = sel('subtitle')
		
	
	{item}
		{inner}
			background #fff
			padding 20px
			border 1px solid $border_color
			position relative
			margin-bottom 22px
			border-radius 4px
			&:before,
			&:after
				display block
				position absolute
				content ''
				width 0
				height 0
				border-style solid
				top 100%
			&:after
				border-color #fff transparent transparent transparent
				border-width 18px 18px 0 0
			&:before
				border-color $border_color transparent transparent transparent
				border-width 20px 20px 0 0 
				left 19px
		blockquote
			padding 0
			font-weight 400
			font-style italic
			margin 0
			color _fc
			&:before
				// content ''
				display none
			p
				color _fc
		{author}
			overflow hidden
			img
				width auto
				float left
				margin-right ($base_space/3)
				border-radius 50%
			{name}
				font-weight bold
				margin-bottom 0
				font-size $font_size - 1
			cite
				font-size _fs - 2
				font-style italic
				line-height 1em
				margin 0
				opacity .85
				display block

	{item_color}
		{inner}
			border 1px solid $base_color
			background $base_color
			blockquote, blockquote p
				color #fff
			&:after
				border-color $base_color transparent transparent transparent
			&:before
				border-color $base_color transparent transparent transparent

