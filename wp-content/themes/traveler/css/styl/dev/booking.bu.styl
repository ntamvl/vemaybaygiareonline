booking()
	.booking-list
		list-style none
		padding 0
		margin-bottom 30px
		> li
			margin-bottom 10px
			.booking-item
				cursor pointer
				display block
				position relative
				// padding 0 15px
				// padding 20px 0
				padding 17px
				// border-bottom 1px solid darken(#fff, 10%)
				border 1px solid darken(#fff, 10%)
				color $font_color
				// transition border 0.3s, transition 0.2s
				transition 0.2s
				// margin-bottom 10px
				&:hover, &.active
					border 1px solid _base
					// transform translate3d(0, -2px, 0)
					// top -2px
					// margin-top -2px
					box-shadow 0 2px 1px fade-out(#000, 80%)
					.booking-item-number
						background lighten(#000, 50%)
					.booking-item-img-wrap .booking-item-img-num
						opacity 1
						background fade-out(black, 50%)
				.booking-item-title
					margin-bottom 7px
				.booking-item-description
					font-size $font_size - 1
					line-height 1.5em
					// padding-top 5px
					// margin-top 15px
					// border-top 1px solid darken(#fff, 6%)	
				.booking-item-img-wrap
					position relative
					// opacity 0.3
					.booking-item-img-num
						opacity 0.5
						transition 0.2s
						position absolute
						bottom 0
						right 0
						color white
						background fade-out(black, 99%)
						padding 5px 7px
						font-size 13px
						line-height 1em
						> .fa
							margin-right 3px			
				.booking-item-last-booked
					font-size 11px		
				.booking-item-rating
					margin-bottom 3px
					padding-bottom 3px
					border-bottom 1px solid darken(#fff, 3%)
					display inline-block
					.booking-item-rating-stars
						display inline-block
						margin-right 17px
						margin-bottom -5px
						color _base
					.booking-item-rating-number
						margin-right 7px
						> b
							font-size 25px
				.booking-item-address
					line-height 1em
					// margin-bottom 10px
					font-size 13px			
				.booking-item-price-from
					display block
					font-size $font_size - 2px
					line-height 1em
					// margin-bottom 5px
				.booking-item-price
					font-size 47px
					// color _base
					color darken($font_color, 15%)
					line-height 1em
					display inline-block
					margin-bottom 12px
				.booking-item-number
					position absolute
					width 20px
					height 20px
					line-height 20px
					background lighten(#000, 90%)
					text-align center
					color white
					display block
					top 2px
					right 2px
					font-size 10px
					transform translate3d(0,0,0)
					transition 0.2s
					// backface-visibility hidden
					// z-index 1
				.booking-item-flight-details
					overflow hidden
					.booking-item-departure,
					.booking-item-arrival
						float left
						width 47%
						.fa-plane
							float left
							display block
							font-size 30px
							margin-right 5px
							position relative
							top 4px
						h5
							// margin-bottom 7px
							margin-bottom 0
						.booking-item-date
							margin-bottom 7px
							font-size 12px
							line-height 1em
							padding-left 32px		
					.booking-item-departure
						margin-right 6%
					.booking-item-destination
						font-size $font_size - 2
						line-height 1.3em
				.booking-item-airline-logo
					> p
						margin-bottom 0
						font-size 12px
						margin-top 5px
						line-height 1.3em
					> img
						width 40px
				.booking-item-flight-class
					// margin-top 5px
					margin-bottom 7px
					margin-top -5px
					// text-align right
					font-size $font_size - 3
					color lighten($font_color, 20%)
					line-height 1em
					// margin-right 2px
				// .booking-item-btn
				// 	margin-top 10px

				.booking-item-features
					list-style none
					// overflow hidden
					width 75%
					float left
					margin 0
					padding 0
					margin-bottom -20px
					// overflow hidden
					> li 
						float left
						position relative
						padding-bottom 15px
						margin-right 7px
						margin-bottom 7px
						&:hover
							> i
								// background darken(white, 2%)
								border-color darken(_base, 15%)
								opacity 1
						> span
							position absolute
							bottom 2px
							left 0
							display block
							text-align center
							font-size 10px
							line-height 1em
							width 100%
							// margin-top 3px
						> i 
							padding 5px
							// background darken(white, 7%)
							transition 0.3s
							// background _base
							display block
							border-radius 5px
							border 1px solid darken(white, 20%)
							opacity 0.8
							> img
								width 25px
				.booking-item-features-dark
					width 25%
					> li > i
						background lighten(black, 30%)
						border 1px solid lighten(black, 20%)
				.booking-item-features-rentals
					margin-top 10px
					margin-bottom 0
					> li
						margin-bottom 0		
				.booking-item-car-title
					margin-top 7px
					font-size $font_size - 2
					line-height 1em
					margin-bottom 0

	.booking-item-container
		.booking-item-details
			height 0
			overflow hidden
			transition opacity 0.3s, transform 0.3s, height 0.3s
			opacity 0
			transform translate3d(0, -10px, 0)
			h5
				font-size $font_size - 1
				font-weight 400
				margin-bottom 20px
				&.list-title
					margin-bottom 0
			.list
				margin-bottom 20px	
		&.active .booking-item-details
			height auto
			overflow auto
			padding 15px
			border 1px solid darken(#fff, 10%)
			border-top none 
			position relative
			font-size $font_size - 3
			line-height 1.6em
			opacity 1
			transform translate3d(0, 0, 0)

	.booking-title
		margin-bottom 25px
		margin-top 15px
		> small
			font-size $font_size - 2
			margin-left 5px 

	.booking-filters
		font-size $font_size - 3
		background lighten(#000, 30%);
		color white
		padding 15px 20px
		width 263px
		.booking-filters-list
			> li
				margin-top 15px
				padding-top 15px
				border-top 1px solid lighten(#000, 23%)
				.booking-filters-title
					margin-bottom 5px
					small
						font-size 11px
						font-weight 400
						// width 30px
						position relative
						top 10px
						float right
						line-height 1.3em
						color darken(white, 20%)
				.booking-filters-sub-title
					font-size 15px
					line-height 1em
					margin-top 10px		
						

	.booking-sort
		// color white
		// margin-bottom 15px
		font-size $font_size - 4
		.booking-sort-title
			font-size $font_size
			> a
				color $font_color  						