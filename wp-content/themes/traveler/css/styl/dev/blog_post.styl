blog_post()
	post = '.post'
	list = '.post-list'
	meta = '.post-meta'
	title = '.post-title'
	desc = '.post-desciption'
	thumb = '.post-thumb'
	inner = '.post-inner'
	image = '.post-img'
	head = '.post-header'
	
	
	{post}
		margin-bottom 30px
		// padding-bottom 15px
		overflow hidden
		// border-radius 5px
		background white
		border-bottom 1px solid darken(white, 7%)
		{head}
			blockquote
				margin 30px
				font-size 25px
				padding-right 40px
			.post-link
				padding 30px 0
				font-size 50px
				font-weight bold
				display block
				&:hover
					background _base
					color white
		{inner}
			border-top 2px solid _base
			padding 15px 0 30px 0
		{title}
			margin 0 0 15px 0
			font-size 35px
		{desc}
			// margin 10px 0
			margin-bottom 15px
			// font-size $font_size - 1
			// line-height 1.4em
			// color lighten(_fc, 30%)
		{meta}
			list-style none
			// margin 0
			// padding 0
			margin 0 0 5px 0
			padding 0 0 5px 0
			border-bottom 1px dashed darken(white, 10%)
			display table
			li
				display inline-block
				margin-right 20px
				a
					font-size $font_size - 2
					font-style italic
					color _fc
				.fa
					margin-right 3px
					color lighten($font_color, 45%)