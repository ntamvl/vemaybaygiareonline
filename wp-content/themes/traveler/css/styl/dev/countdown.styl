countdown()

	.countdown
		width 400px
		overflow hidden
		height 58px
		margin 20px 0
		display table
		> div
			display table-cell
			> span
				display block
				text-align center
	
	span.count
		font-size 48px
		line-height 48px
		

	.countdown.countdown-inline
		width 100%
		margin 10px 0 0 0
		height auto
		> div
			display inline
			&:first-child
				span.count
					font-size 25px
					font-weight bold
					margin-right 5px
					color $base_color
				span.title
					font-size 20px	
					font-weight bold
					display inline
					margin-right 10px
					color $base_color
			&:first-child,
			&:last-child
				span.count:after
					content ''
					margin 0		
			> span
				display inline
				line-height 1em		
			span.count
				font-size 20px
				&:after
					content ':'
					margin 0 2px
			span.title
				display none
				
	.countdown-lg
		margin 20px auto
		padding 15px 0
		border-top 1px solid fade-out(#fff, 85%)
		border-bottom 1px solid fade-out(#fff, 85%)
		span.count
			font-size 70px
			margin-bottom 10px
		> div
			padding 0 25px
		.title
			color fade-out(#fff, 30%)